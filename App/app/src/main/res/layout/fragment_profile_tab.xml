<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profileTabLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/userProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/dashboardBackground"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_alignParentTop="true"
            android:background="#1DE9B6" />

        <ImageView
            android:id="@+id/profileImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_account"/>

        <TextView
            android:id="@+id/nameText"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="20dp"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/profileImage"
            android:background="@drawable/shape_button_dark"
            android:textSize="19sp"
            android:ems="5"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textAlignment="center"
            android:textStyle="bold"
            tools:text="이름"/>

        <TextView
            android:id="@+id/idText"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_below="@+id/nameText"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/profileImage"
            android:background="@drawable/shape_button_dark"
            android:ems="5"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:textStyle="bold"
            android:maxLines="1"
            tools:text="아이디"/>

        <TextView
            android:id="@+id/followNum"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/followerNum"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:gravity="center"
            android:textAlignment="center"
            android:textSize="19sp"
            android:textStyle="bold"
            tools:text="16\n팔로우"/>

        <TextView
            android:id="@+id/followerNum"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:gravity="center"
            android:textAlignment="center"
            android:textSize="19sp"
            android:textStyle="bold"
            tools:text="16\n팔로워"/>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/changeProfileImageButton"
            android:layout_width="175dp"
            android:layout_height="50dp"
            android:layout_below="@+id/profileImage"
            android:layout_marginTop="20dp"
            android:layout_alignStart="@+id/profileImage"
            android:background="@drawable/shape_button_dark"
            android:gravity="center"
            android:text="프로필 사진 변경"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="19sp"
            android:textStyle="bold"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/editMyPosts"
            android:layout_width="175dp"
            android:layout_height="50dp"
            android:layout_below="@+id/profileImage"
            android:layout_marginTop="20dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:background="@drawable/shape_button_dark"
            android:gravity="center"
            android:text="내 게시글 관리"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="19sp"
            android:textStyle="bold"/>

    </RelativeLayout>
    <FrameLayout
        android:id="@+id/myPostsFragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"/>
</LinearLayout>