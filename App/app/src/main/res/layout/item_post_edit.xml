<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="230dp"
    android:gravity="center">
    <LinearLayout
        android:id="@+id/postsItem"
        android:layout_width="360dp"
        android:layout_height="210dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/ic_posts_background"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="360dp"
            android:layout_height="150dp"
            android:orientation="horizontal">

            <ImageView
                android:background="@drawable/ic_posts_background"
                android:id="@+id/postsIcon"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:clipToOutline="true"
                android:src="@drawable/test"
                android:scaleType="center"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="18dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/postsTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="후기 글 제목"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/postsAuthorId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="아이디"
                    android:textSize="14dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/postsTimeline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2024년 8월 21일 부터\n2024년 8월 23일 까지"
                    android:textSize="14dp"/>

                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_location"/>

                    <TextView
                        android:id="@+id/postsLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:textStyle="bold"
                        android:textSize="14dp"
                        android:text="부산"/>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/editPostButton"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:drawableStart="@drawable/ic_pen"
                android:layout_marginStart="65dp"
                android:background="#00000000"
                android:text="편집"
                android:textStyle="bold"
                android:textSize="16dp"/>

            <Button
                android:id="@+id/deletePostButton"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:drawableStart="@drawable/ic_close"
                android:layout_marginStart="60dp"
                android:background="#00000000"
                android:text="삭제"
                android:textColor="#FF0000"
                android:textStyle="bold"
                android:textSize="16dp"/>


        </LinearLayout>
    </LinearLayout>
</LinearLayout>
